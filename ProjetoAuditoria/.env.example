# Google Analytics 4 API
GA4_PROPERTY_ID=your_ga4_property_id_here
GA4_CREDENTIALS_PATH=path/to/ga4_credentials.json

# Google Search Console API
GSC_SITE_URL=https://your-website.com
GSC_CREDENTIALS_PATH=path/to/gsc_credentials.json

# PageSpeed Insights API
PSI_API_KEY=your_pagespeed_insights_api_key_here

# Google Docs API
GOOGLE_DOCS_CREDENTIALS_PATH=path/to/google_docs_credentials.json
GOOGLE_DOCS_FOLDER_ID=your_google_drive_folder_id_here

# Screaming Frog CLI
SCREAMING_FROG_PATH=/path/to/screamingfrogseospider
SCREAMING_FROG_LICENSE_KEY=your_screaming_frog_license_key

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
FLASK_PORT=5000

# Database
DATABASE_PATH=./data/audit_history.db

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/audit.log

# Chrome DevTools MCP
CHROME_HEADLESS=false
CHROME_TIMEOUT=30000

# Context7 MCP (para referÃªncias oficiais)
CONTEXT7_API_KEY=your_context7_api_key_here

# Redis Cache Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_SSL=false
REDIS_SOCKET_TIMEOUT=5
REDIS_CONNECTION_POOL_SIZE=10
REDIS_MAX_CONNECTIONS=50

# Cache Configuration
CACHE_TYPE=redis
CACHE_DEFAULT_TTL=3600
CACHE_MEMORY_SIZE=1000
CACHE_DISK_SIZE_MB=500
CACHE_DIR=cache